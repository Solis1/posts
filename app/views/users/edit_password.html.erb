<% @desc_tit = "Cambiar Password" %>
<div class="der">
<h1 style="margin-left: 40px;">Cambiar Password</h1>

<%= form_for @user, :url => :update_user_password, :method => "post" do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>
  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %><br/><br/><br/>
  <%= f.submit "Guardar cambios" %>
<% end %>
<% if !admon_user %>
<%= link_to "Eliminar Usuario", user_path(@user), :method => "delete", :confirm => "Â¿Realmente deseas eliminar este usuario?", :style => "float:right; margin: 0 60px 0 0;" %>
<% end %>
</div>
